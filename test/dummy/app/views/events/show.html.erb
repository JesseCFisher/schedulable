<h1>Showing Event</h1>
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @event.name %>
</p>

<p>
  <strong>Schedule:</strong>
  <%= @event.schedule %>
  
  <%= @event.schedule.date.to_s %> --- <%= @event.schedule.time.to_s %>
</p>

<h3>Remaining occurrences</h3>
<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% @event.remaining_event_occurrences.each do |event_occurrence| %>
      <tr>
        <td><%= event_occurrence.date.to_s %></td>
        <td><%= I18n.l ( event_occurrence.date ) %></td>
      </tr>
  	<% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
